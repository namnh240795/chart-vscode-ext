{
  "scopeName": "source.cryml",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keys"
    },
    {
      "include": "#values"
    }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.number-sign.cryml",
      "match": "#.*$"
    },
    "keys": {
      "name": "entity.name.tag.cryml",
      "match": "^\\s*[a-zA-Z_][a-zA-Z0-9_]*:"
    },
    "values": {
      "patterns": [
        {
          "name": "constant.language.cryml",
          "match": "\\b(true|false|null|yes|no)\\b"
        },
        {
          "name": "constant.numeric.cryml",
          "match": "\\b[0-9]+(?:\\.[0-9]+)?\\b"
        },
        {
          "name": "string.quoted.double.cryml",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.cryml",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.cryml",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.cryml",
              "match": "\\\\."
            }
          ]
        }
      ]
    }
  }
}
