{
  "name": "chart-vscode-ext",
  "displayName": "Chart VSCode Extension",
  "description": "A VS Code extension with React Flow visualization",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:chart-vscode-ext.openFlow",
    "onCommand:chart-vscode-ext.openPrisma",
    "onCommand:chart-vscode-ext.openYaml",
    "onCommand:chart-vscode-ext.saveAsYaml",
    "onCommand:chart-vscode-ext.validateCryml",
    "onView:flowChartSidebar",
    "onLanguage:cryml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "flowChartContainer",
          "title": "Flow Chart",
          "icon": "res/icon.svg"
        }
      ]
    },
    "views": {
      "flowChartContainer": [
        {
          "id": "flowChartSidebar",
          "name": "Charts"
        }
      ]
    },
    "commands": [
      {
        "command": "chart-vscode-ext.openFlow",
        "title": "Open Flow Chart",
        "icon": "$(play)"
      },
      {
        "command": "chart-vscode-ext.openPrisma",
        "title": "Open with Chorack",
        "icon": "$(database)"
      },
      {
        "command": "chart-vscode-ext.openYaml",
        "title": "Open with Chorack",
        "icon": "$(file-code)"
      },
      {
        "command": "chart-vscode-ext.saveAsYaml",
        "title": "Save Current Schema as YAML",
        "icon": "$(save)"
      },
      {
        "command": "chart-vscode-ext.validateCryml",
        "title": "Validate .cryml File"
      }
    ],
    "languages": [
      {
        "id": "cryml",
        "aliases": ["Cryml", "cryml"],
        "extensions": [".cryml"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "cryml",
        "scopeName": "source.cryml",
        "path": "./syntaxes/cryml.tmLanguage.json"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "chart-vscode-ext.openPrisma",
          "when": "resourceExtname == .prisma",
          "group": "navigation"
        },
        {
          "command": "chart-vscode-ext.openYaml",
          "when": "resourceLangId == cryml",
          "group": "navigation"
        },
        {
          "command": "chart-vscode-ext.validateCryml",
          "when": "resourceLangId == cryml",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "chart-vscode-ext.openPrisma",
          "when": "resourceExtname == .prisma",
          "group": "navigation"
        },
        {
          "command": "chart-vscode-ext.openYaml",
          "when": "resourceLangId == cryml",
          "group": "navigation"
        },
        {
          "command": "chart-vscode-ext.validateCryml",
          "when": "resourceLangId == cryml",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "chart-vscode-ext.openYaml",
          "when": "resourceLangId == cryml"
        },
        {
          "command": "chart-vscode-ext.validateCryml",
          "when": "resourceLangId == cryml"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "pnpm run compile:extension && pnpm run compile:webview",
    "compile:extension": "webpack --mode production --config webpack.config.js",
    "compile:webview": "webpack --mode production --config webpack.webview.config.js",
    "watch": "pnpm run watch:extension & pnpm run watch:webview",
    "watch:extension": "webpack --mode development --watch --config webpack.config.js",
    "watch:webview": "webpack --mode development --watch --config webpack.webview.config.js"
  },
  "packageManager": "pnpm@10.20.0",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.11",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.109.0",
    "autoprefixer": "^10.4.24",
    "css-loader": "^7.1.3",
    "js-yaml": "^4.1.1",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "reactflow": "^11.11.4",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.18",
    "ts-loader": "^9.5.4",
    "webpack": "^5.105.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "elkjs": "^0.11.0",
    "yaml": "^2.8.2"
  }
}
